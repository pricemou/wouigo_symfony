{% extends 'admin_login.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}

	<div class="cst-full-hs">
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-12 col-md-6 col-lg-6  login-banner">
					<section class="showcase">
						<div class="container-fluid">
							<div class="row">
								<div class="col-md-12 text-center">
									<img src="{{asset('/img/Logo_Wouigo.jpg')}} " alt="Logo_Wouigo"/>

									<p class="lead text-center mt-3">Nous aidons les particuliers et entreprises
										<br>
										a faire la visite techique de leurs véhicules
										<br>
										dans les delais et sans tracas.</p>
								</div>
							</div>
						</div>
					</section>
				</div>
				<div class="col-sm-12 col-md-6 col-lg-6 ">
					<main>
						<form action="{{path('app_loginConextion')}}" method="POST">
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<img src="{{asset('/img/Logo_ecriture_bleu_sans_fond.svg')}} " alt="Logo_ecriture_bleu_sans_fond" width="163" class="loginImageCenter d-block" style="margin: 6% 21% auto auto;"/>


							<div id="login" class="login" style="margin: 3rem auto;">
								<div class="containe mt-3">
									<div class="row centerlogin">

										<div class="col-12">
											<div class="m-auto text-center">
												<h3 class="cst-fs-15-px text-secondary">Informations utilisateur</h3>
											</div>
										</div>

										<div class="col-12 mt-4">
											<label for="Prénom/adresse email" class="logintext">
												Email/Télephone</label>
											<input type="text" name="email" class="login_input" placeholder="email@gmail.com" required>
										</div>

										<div class="col-12 mt-2">
											<label for="" class="logintext">
												Mot de passe</label>
											<input type="password" name="password" class="login_input" placeholder="***********" required>
										</div>

										<div class="col-12 mt-2">
											<label for="" class="logintext">
												Répétez mot de passe</label>
											<input type="password" name="repeterpassword" class="login_input" placeholder="***********" required>
										</div>


										<div class="col-12 mt-2">
											<div id="ex1" class="modal" style="position: initial !important;">
												<img src="{{asset('/img/Logo_ecriture_bleu_sans_fond.svg')}} " alt="Logo_ecriture_bleu_sans_fond" width="163" class="loginImageCenter d-block" style="margin: 6% 21% 3% auto;"/>

												<p class="text-center mb-4" style="font-size: 1.1rem;">En cliquant sur <br> "<strong style="color:#2eaef9">Enregistre</strong>" , <br> vous reconnaissez avoir fourni <br> des information fiables <br>
												 et correctes</p>
												{# <input type="submit" value="Se connecte" class="btn seConnecter" style="width: 7rem !important;"> #}
												<p class="text-center">
													<a href="#" class="btn seConnecter" id="modalopen" style="width: 7rem !important;">OK</a>
												</p>
											</div>

											<!-- Link to open the modal -->
											<div class="input-group loginButton mb-3" style="top: 27px;">
												<span class="input-group-btn loginTaille">
													<p>
														<a href="#ex1" type="submit" rel="modal:open" class="btn seConnecter " style="width: 7rem !important;">Se connecte</a>
													</p>
												</span>
											</div>
										</div>

									</div>

								</div>
							</div>

						</form>
					</main>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
