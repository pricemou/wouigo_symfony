								<div class="containe mt-3">
									<div class="row centerlogin">

										<div class="col-12">
											<div class="m-auto text-center">
												<h3 class="cst-fs-15-px text-secondary">Qui être vous?</h3>
											</div>
										</div>

										<div class="col-12 mt-5">
											<div class="m-auto w-50 text-center ">
												<ul class="cst-effect-link cst-list-style-type m-0 p-0 text-center" style="border: 1px solid #3ab5fc;">
													<li class="min-vw-50 m-2 d-inline-block text-left">
														<label for="huey">Particulier</label>
													</li>
													<li class="min-vw-50 m-2 d-inline-block text-end">
														<input type="radio" id="huey" name="drone" class="crt-status" value="particulier">
													</li>
												</ul>
											</div>
										</div>

										<div class="col-12 mt-4">
											<div class="m-auto w-50 text-center">
												<ul class="cst-effect-link cst-list-style-type m-0 p-0 text-center" style="border: 1px solid #3ab5fc;">
													<li class="min-vw-50 m-2 d-inline-block text-left">
														<label for="huey">Entreprise</label>
													</li>
													<li class="min-vw-50 m-2 d-inline-block text-end">
														<input type="radio" id="huey" name="drone" class="crt-status" value="entreprise">
													</li>
												</ul>
											</div>
										</div>

										<div class="col-12 mt-4">
											<div class="m-auto w-50 text-center">
												<ul class="cst-effect-link cst-list-style-type m-0 p-0 text-center" style="border: 1px solid #3ab5fc;">
													<li class="min-vw-50 m-2 d-inline-block text-left">
														<label for="huey">Auxiliaire</label>
													</li>
													<li class="min-vw-50 m-2 d-inline-block text-end">
														<input type="radio" id="huey" name="drone" class="crt-status" value="auxiliaire">
													</li>
												</ul>
											</div>
										</div>

										<div class="col-12 mt-2">
											<div class="input-group loginButton" style="top: 0px;">
												<span class="input-group-btn loginTaille">
												</span>
											</div>
										</div>

										

									</div>

								</div>
							</div>
						</form>
					</main>
				</div>
			</div>
		</div>
	</div>

	


{% endblock %}
